<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".LoginStudent"
    android:background="@drawable/background_home_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_student"
            android:layout_width="167dp"
            android:layout_height="164dp"
            android:layout_margin="45dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            app:srcCompat="@drawable/logo_universitas_klabat" />

        <TextView
            android:id="@+id/text_welcome_student"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Welcome Student, please sign in!"
            android:textColor="#FFFFFF"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text_command_student"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="Please use your ID number and password to sign in to your account."
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_username_student"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/inputtext"
            android:ems="10"
            android:hint="105012345678"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_password_student"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/inputtext"
            android:ems="10"
            android:hint=" Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_login_student"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_login"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/text_signup_student"
            android:layout_width="145dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Dont have account?"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/btn_signup_student"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_login"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>